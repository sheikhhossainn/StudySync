{
  "version": 2,
  "builds": [
    {
      "src": "studysync/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb", 
        "runtime": "python3.9"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "studysync/wsgi.py"
    },
    {
      "src": "/admin/(.*)",
      "dest": "studysync/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "studysync/wsgi.py"
    }
  ],
  "functions": {
    "studysync/wsgi.py": {
      "maxDuration": 30
    }
  }
}
